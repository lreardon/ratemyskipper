<% twcss_bg_color = case type %>
<% when 'notice' %>
    <% 'bg-blue-100' %>
<% when 'alert' %>
    <% 'bg-red-100' %>
<% else %>
    <% raise UnsupportedValueError %>
<% end %>

<div data-controller='removals' class="flex flex-row-reverse notice-dismissible <%= twcss_bg_color %> border border-blue-500 rounded-lg text-blue-700" role="<%= type %>">
    <div class='flex flex-row justify-end pt-2 pr-2 xl:pt-3 xl:pr-3'>
        <div class='cursor-pointer'>
            <%= fa_icon "x", data: {action: "click->removals#remove"} %>
        </div>
    </div>
    <div class='py-3 px-4 xl:py-4 xl:px-5'>
        <p class='font-bold'><%= msg %></p>
    </div>
</div>
