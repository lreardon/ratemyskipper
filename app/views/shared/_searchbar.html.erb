<%= form_tag path, method: :get do %>
  <div class='flex flex-col xs:flex-row flex-nowrap gap-3 xs:items-center'>
    <%= label_tag :q, title, class: 'text-xl' %>
    <%= text_field_tag :q %>
    <%= submit_tag 'Search', class: 'bg-gray-100 rounded-lg py-3 px-5 bg-gray-100 text-lg'%>
  </div>
<% end %>
