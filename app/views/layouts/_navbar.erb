<header>
  <nav id='navbar' class="flex flex-row border-b-2 items-center gap-5 py-3 pl-3 pr-3 md:pr-5 md:pr-8 md:pl-5">
    <%= link_to "/" do %>
      <img id='navbar-image' height='100%' src=<%= asset_path("buoy-small.png")%> />
    <% end %>
    <div class='flex flex-row <%= if current_user then 'justify-between' else 'justify-end' end %> w-full gap-3'>
      <% if current_user %>
        <div class='flex flex-row items-center gap-3 sm:gap-4 md:gap-5 flex-nowrap lg:items-center'>
          <%= link_to 'Skippers', skippers_path %>
          <%= link_to 'Users', users_path %>
        </div>
      <% end %>
      <div class='flex flex-row gap-3 sm:gap-4 md:gap-5 flex-nowrap items-center'>
        <% if current_user %>
          <%= link_to 'Profile', user_path(current_user) %>
          <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'block' %>
        <% else %>
          <%= link_to 'Sign up', new_user_registration_path %>
          <%= link_to 'Log in', new_user_session_path %>
        <% end %>
      </div>
    </div>
  </nav>
</header>