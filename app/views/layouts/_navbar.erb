<header>
  <nav class="flex flex-row border justify-between items-center gap-3 py-3 pl-3 pr-5">
    <div class='flex flex-row items-center gap-3'>
      <img src="/assets/buoy.png" width="70" height="auto" class="rounded-full" />
      <div class='flex flex-row gap-3'>
        <% if current_user %>
          <%= link_to "Skippers", skippers_path, class: "rounded-lg bg-gray-100 py-3 px-5 font-medium" %>
        <% end %>
      </div>
    </div>
    <div class='flex flex-row gap-3'>
      <% if current_user %>
        <%= button_to "My Profile", user_path(current_user), method: :get, class: "rounded-lg bg-gray-100 py-3 px-5 font-medium" %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "rounded-lg bg-red-100 py-3 px-5 font-medium" %>
      <% else %>
        <%= button_to 'Sign Up', new_user_registration_path, method: :get, class: "rounded-lg bg-blue-100 py-3 px-5 font-medium" %>
        <%= button_to 'Log In', new_user_session_path, method: :get, class: "rounded-lg bg-gray-100 py-3 px-5 font-medium" %>
      <% end %>
    </div>
  </nav>
</header>
