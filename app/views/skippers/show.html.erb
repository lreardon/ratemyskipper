<div class="flex flex-col">
  <div class="flex flex-row justify-end">
    <%= link_to 'Back to skippers', skippers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <div class="flex flex-col border m-3 p-2">
    <p><%= @skipper.name %></p>
    <p><%= @skipper.boatname %></p>
    <p><%= @skipper.fishery %></p>
  </div>
  <div class="flex flex-row justify-center gap-3">
    <%= link_to 'Edit this skipper', edit_skipper_path(@skipper), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Destroy this skipper', skipper_path(@skipper), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>
</div>
