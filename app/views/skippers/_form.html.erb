<%= form_with(model: skipper, class: "contents") do |form| %>
  <%= render 'shared/errors', resource: skipper %>
  <div class='flex flex-col justify-start gap-6'>
    <div class='flex flex-col lg:flex-row lg:items-center gap-3'>
      <%= form.label :firstname, 'First name' %>
      <%= form.text_field :firstname %>
    </div>
    <div class='flex flex-col lg:flex-row lg:items-center gap-3'>
      <%= form.label :lastname, 'Last name' %>
      <%= form.text_field :lastname %>
    </div>
    <div class='flex flex-col lg:flex-row lg:items-center gap-3'>
      <%= form.label :boatname, "Boat name (exclude F/V)" %>
      <%= form.text_field :boatname %>
    </div>
		<div class='flex flex-col lg:flex-row gap-6'>
			<%= form.label :city, 'City' %>
      <%= form.text_field :city %>
		</div>
		<div class='flex flex-col lg:flex-row lg:items-center gap-3'>
      <%= form.label :state, "State" %>
      <%= form.select :state, options_for_select(Places::STATES.map { |state_double| state_double[1] }, skipper.state || 'AK') %>
    </div>
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-100 text-lg cursor-pointer" %>
  </div>
<% end %>
