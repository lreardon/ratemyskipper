<div class="w-full flex flex-col gap-10">
  <h1 class="font-bold text-4xl">Skippers</h1>

  <div class='flex flex-col items-start sm:flex-row sm:justify-around gap-3'>
    <%= render 'shared/button/link', title: 'Review a skipper', path: new_review_path, twcss_color: 'bg-orange-100' %>
    <%= render 'shared/button/link', title: 'Add your skipper', path: new_skipper_path, twcss_color: 'bg-blue-100' %>
  </div>
  
  <%= render 'shared/searchbar', path: skippers_path, title: 'Find a skipper' %>
  <%= turbo_frame_tag :search_skippers do %>
    <% unless @skippers.empty? %>
      <div id="skippers" class='flex flex-col gap-5'>
        <%= render @skippers %>
      </div>
    <% else %>
      <div class='flex flex-row'>
        <div class='flex flex-col gap-10'>
          <p class='text-xl'>Oops, we couldn't find any skippers matching your search!</p>
          <%= render 'shared/button/link', title: 'Add your skipper', path: new_skipper_path, twcss_color: 'bg-blue-100', data: {turbo: false} %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>