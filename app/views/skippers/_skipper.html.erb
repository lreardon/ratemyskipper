<div id="<%= dom_id skipper %>">
  <% if action_name != "show" %>
    <%= link_to "Show this skipper", skipper, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this skipper', edit_skipper_path(skipper), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
