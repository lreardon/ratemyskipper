<%= link_to skipper, data: { turbo: "false" } do %>
  <div id="<%= dom_id skipper %>">
    <div class='flex flex-col xl:flex-row rounded-lg p-5 xl:gap-20 xl:items-center items-start' style="background-color: <%= color_for_skipper(skipper) %>;">
      <h4 class='font-bold pb-3 lg:pb-5 xl:pb-0'><%= skipper.name %></h3>
      <h4><%= fv_boatname(skipper.boatname) %></h3>
      <h4><%= skipper.fishery %></h3>
    </div>
  </div>
<% end %>