<div class='flex flex-col pt-8 gap-16'>
  <h1>Send us an email</h1>
  <div class='flex flex-col gap-10 text-xl'>
    <%= form_with url: contact_path, method: :post, local: true, class: 'flex flex-col gap-6 items-start' do |form| %>
        <div class="flex flex-col gap-6 items-start form-group">
          <div class='flex flex-col gap-3 items-start'>
            <%= form.label :email, 'Your Email' %>
            <%= form.email_field :email, class: "form-control" %>
          </div>
          <div class='flex flex-col gap-3 items-start'>
            <%= form.label :message %>
            <%= form.text_area :message, class: "form-control" %>
          </div>
        </div>
      <%= form.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-100 text-lg cursor-pointer" %>
    <% end %>
  </div>
</div>
