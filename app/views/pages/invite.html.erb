<div class='flex flex-col gap-10'>
  <h1>Invite a friend</h1>
  <% if current_user %>
    <%= form_with url: invite_path, method: :post, local: true, class: 'flex flex-col gap-6 items-start' do |form| %>
        <div class="flex flex-col gap:3 items-start form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
      <%= form.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-100 text-lg cursor-pointer" %>
    <% end %>
  <% else %>
    <h2>Log in to send an invite!</h2>
  <% end %>
</div>