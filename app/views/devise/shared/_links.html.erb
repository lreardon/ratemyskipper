<div class='flex flex-col'>
  <%- if controller_name != 'sessions' %>
    <%= render 'shared/button/link', title: 'Log in', path: new_session_path(resource_name), twcss_color: 'bg-gray-100' %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= render 'shared/button/link', title: 'Sign up', path: new_registration_path(resource_name), twcss_color: 'bg-gray-100' %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= render 'shared/button/link', title: 'Forgot your password?', path: new_password_path(resource_name), twcss_color: 'bg-gray-100' %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= render 'shared/button/link', title: 'Didn\'t receive confirmation instructions?', path: new_confirmation_path(resource_name), twcss_color: 'bg-gray-100' %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= render 'shared/button/link', title: 'Didn\'t receive unlock instructions?', path: new_unlock_path(resource_name), twcss_color: 'bg-gray-100' %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= render 'shared/button/form', title: "Sign in with #{OmniAuth::Utils.camelize(provider)}", path: omniauth_authorize_path(resource_name, provider), data: { turbo: false }, twcss_color: 'bg-gray-100' %><br />
    <% end %>
  <% end %>
<div>
