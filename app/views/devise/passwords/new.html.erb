<%= render layout: 'devise/shared/devise_form', locals: {form_title: 'Reset Password'} do %>
  <div class="flex">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class='flex flex-col gap-5'>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions">
          <%= f.submit "Send password reset instructions", class: 'flex flex-row justify-centerpy-3 px-5 bg-blue-100 text-2xl rounded-lg cursor-pointer' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
