<%= render layout: 'devise/shared/devise_form', locals: {form_title: 'Reset Password'} do %>
  <div class="flex">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class='flex flex-col gap-5'>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions">
          <div class='flex flex-row justify-center p-5 bg-blue-100 text-2xl rounded-lg'><%= f.submit "Send password reset instructions" %></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
