<div class='flex flex-col justify-center'>
    <% if review.author == current_user %>
        <div class='bg-orange-100 py-3 px-5 rounded-lg'>
            <p class='text-lg'>My Review</p>
            <p class='text-sm'><%= readable_datetime_month_year(review.updated_at) %></p>
        </div>
    <% elsif review.author_visible_for_user?(current_user) %>
        <%= link_to review.author, class: 'bg-orange-100 py-3 px-5 rounded-lg' do %>
            <p class='text-lg'><%= review.author.name %></p>
            <p class='text-sm'><%= readable_datetime_month_year(review.updated_at) %></p>
        <% end %>
    <% else %>
        <div class='bg-orange-100 py-3 px-5 rounded-lg'>
            <p class='text-lg'>Author Hidden</p>
            <p class='text-sm'><%= readable_datetime_month_year(review.updated_at) %></p>
        </div>
    <% end %>
</div>