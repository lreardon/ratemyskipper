<div class="w-full">
  <% if @skipper.present? %>
    <div class='flex flex-row justify-end'>
      <%= link_to 'Back to skipper', skipper_path(@skipper), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
    <h1 class="font-bold text-4xl p-5">New review for <%= @skipper.name %></h1>
      <%= render "form", review: @review %>
  <% else %>
    <p>Look up a skipper to review</p>
    <%= turbo_frame_tag :search_skippers do %>
      <%= render 'shared/searchbar', path: skippers_path, title: 'Find a Skipper' %>
    <% end %>
  <% end %>
</div>
