<div class="flex flex-col gap-10">
  <% if @skipper.present? %>
    <div class='flex flex-row'>
      <%= render 'shared/button/link', title: 'Back to skipper', path: @skipper, twcss_color: 'bg-gray-100' %>
    </div>
    <h1 class="font-bold text-4xl p-5">New review for <%= @skipper.name %></h1>
      <%= render "form", review: @review %>
  <% else %>
    <%= render 'shared/searchbar', path: skippers_path, title: 'Find a skipper to review' %>
    <%= turbo_frame_tag :search_results %>
  <% end %>
</div>
