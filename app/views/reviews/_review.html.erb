<div id="<%= dom_id review %>" class="flex flex-col gap-3 p-3 border">
  <p><%= review.comment %></p>
  <div class='flex flex-row gap-3'>
    <% if review.flags? %>
      <% review.flags.each do |flag| %>
        <p class='flex-null bg-red-100 p-3 text-l rounded-lg'><%= flag %></p>
      <%end%>
    <% else %>
      <p class='flex-null bg-green-100 p-3 text-l rounded-lg'>No Flags</p>
    <% end %>
  </div>
  <div class='flex flex-row justify-end gap-2'>
    <% if current_user.wrote_review?(review) %>
      <%= link_to 'Update Review', edit_review_path(@review), method: :get, class: "rounded-lg py-3 px-5 bg-yellow-100 inline-block font-medium" %>
    <% end %>
  </div>
</div>
